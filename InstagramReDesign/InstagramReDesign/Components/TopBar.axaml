<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="InstagramReDesign.Components.TopBar">
	<Grid ColumnDefinitions="Auto,*,Auto">
		<Grid Grid.Column="0">
			<TextBox Classes="search" Height="34" Width="300">
				<TextBox.InnerLeftContent>
					<Grid Margin="10 10 5 10">
						<Path Data="{StaticResource search}" Stroke="Black"
							  StrokeThickness="1" Stretch="Uniform"
							  Width="14" StrokeLineCap="Round"
							  VerticalAlignment="Center" HorizontalAlignment="Center"/>
					</Grid>
				</TextBox.InnerLeftContent>
			</TextBox>
		</Grid>
		<Grid Grid.Column="2">
			<StackPanel Orientation="Horizontal" Spacing="15">
				<Button Classes="addPhoto" Height="33"/>
				<Button Classes="profile" Width="36" Height="36">
					<Button.Background>
						<ImageBrush Source="avares://InstagramReDesign/Assets/Profiles/a1.png"/>
					</Button.Background>
				</Button>
			</StackPanel>
		</Grid>
	</Grid>

</UserControl>
