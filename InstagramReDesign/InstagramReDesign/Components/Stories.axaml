<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             x:Class="InstagramReDesign.Components.Stories">

	<Grid RowDefinitions="Auto,Auto">
		<Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto">
			<TextBlock Classes="h1" Grid.Column="0" Text="Stories"/>
			<StackPanel Grid.Column="2" Spacing="5" Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Watch all" Foreground="Black" FontSize="10" FontFamily="{StaticResource Gilroy-SemiBold}"/>
